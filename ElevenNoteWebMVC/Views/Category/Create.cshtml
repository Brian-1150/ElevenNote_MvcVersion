@model ElevenNote.Models.CategoryCreate

@{
    ViewBag.Title = "Create";
    //string x;
    //string color = Model.ColorOfCategory.ToString();
    //if (Model.ColorOfCategory.ToString() == "blue")
    //    x = "color: blue";

}

<h2>Create</h2>
<head><script>
    $(document).ready(function () {
        $("#colors option").each(function () {
            if ($(this).val() != '') {
                $(this).css('background-color', $(this).val());
            }
        });
    });
</script></head>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>CategoryCreate</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.CategoryName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ColorOfCategory, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-lg-10">
                <select id="colors">
                    <option value="">Please select a color...</option>
                    <option value="Red">Red</option>
                    <option value="Green">Green</option>
                    <option value="Blue">Blue</option>
                    <option value="Yellow">Yellow</option>
                </select>

                  

                @Html.EnumDropDownListFor(model => model.ColorOfCategory, htmlAttributes: new { style = "color: blue;" })

                @Html.ValidationMessageFor(model => model.ColorOfCategory, "", new { @class = "text-danger" })
            </div>
            </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

